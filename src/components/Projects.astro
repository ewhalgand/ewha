---
import projects from "../db/data.json";
---

<section
  class="grid grid-cols-1 gap-10 mt-44 mb-44 md:grid-cols-2 lg:grid-cols-3"
>
{projects.map(project => (
    <div class="shadow-md">
      <img
        class="w-full rounded-t-lg"
        src=`${project.img}`
        alt="project image"
      />
      <div class="bg-primary p-4 rounded-b-lg">
        <h2 class="text-tertiary font-medium mb-3">{project.title}</h2>
        <li class="flex gap-4">
          <a href=`${project.link}` target="_blank" class="text-accent text-xs font-medium border-2 border-tertiary p-2 rounded-full hover:bg-tertiary hover:text-primary">Voir le Github</a>
          <a href={`/projects/${project.slug}`} class="text-accent text-xs font-medium border-2 border-tertiary p-2 rounded-full hover:bg-tertiary hover:text-primary">En savoir plus</a>
        </li>
      </div>
    </div>
))}
</section>
